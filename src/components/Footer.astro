---
import "../styles/global.css"
const currentYear = new Date().getFullYear()
---

<footer>
  <span>
    © 2009 – {currentYear} • Evan Freeze
  </span>
  <span>I don't use LLMs for anything on this site, nor will I ever.</span>
</footer>

<style>
  footer {
    color: var(--text-tertiary);
    font-size: 0.7rem;
    text-align: center;
    text-wrap: balance;
    padding: 16px 0 0;
    display: flex;
    flex-direction: column-reverse;
    gap: 8px;
  }

  @media (min-width: 560px) {
    footer {
      gap: 8px;
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
